Tab:AddToggle({
	Name = "Auto Fusion",
	Default = false,
	Callback = function(AFValue)
        _G.autofuse = AFValue

        task.spawn(function()
            while _G.autofuse do
                local args = {
                    [1] = "Fusionar"
                }
