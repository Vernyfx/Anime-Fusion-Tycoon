                wait(5)
            end
        end)
	end    
})


local Tab = Window:MakeTab({
	Name = "INF MONEY/KI",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

Tab:AddButton({
	Name = "Add 25B KI",
	Callback = function()
        local args = {
            [1] = "Agarrado",
            [2] = "Values",
            [3] = "20"
        }
        game:GetService("ReplicatedStorage").Remotes.Pasante:FireServer(unpack(args))
  	end    
})

Tab:AddToggle({
	Name = "Auto Spam 25B KI",
	Default = false,
	Callback = function(KIValue)
		
        _G.auto25b = KIValue

        task.spawn(function()
            while _G.auto25b do
                local args = {
                    [1] = "Agarrado",
                    [2] = "Values",
                    [3] = "20"
                }
                game:GetService("ReplicatedStorage").Remotes.Pasante:FireServer(unpack(args))
                wait(0.1)        
            end
        end)
	end    
})


local Tab = Window:MakeTab({
	Name = "Misc",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})


Tab:AddSlider({
	Name = "Change WalkSpeed",
	Min = 50,
	Max = 200,
	Default = 50,
	Color = Color3.fromRGB(255,255,255),
	Increment = 1,
	ValueName = "Speed",
	Callback = function(WSValue)
		game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = WSValue
	end    
})

Tab:AddToggle({
	Name = "AutoRebirth",
	Default = false,
	Callback = function(RValue)
		_G.autoreb = RValue

        task.spawn(function()
            while _G.autoreb do
                local args = {
                    [1] = "Rebirthear"
                }
                game:GetService("ReplicatedStorage").Remotes.Pasante:FireServer(unpack(args))
                wait(10)
            end
        end)
	end    
})

