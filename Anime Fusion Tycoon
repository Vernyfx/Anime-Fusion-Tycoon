local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = OrionLib:MakeWindow({Name = "VernyHub", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})


local Tab = Window:MakeTab({
	Name = "Main",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

Tab:AddToggle({
	Name = "Auto Deposit",
	Default = false,
	Callback = function(DValue)
		
_G.autodep = DValue

task.spawn(function()
    while _G.autodep do
local args = {
    [1] = "Depositar"
}
game:GetService("ReplicatedStorage").Remotes.Pasante:FireServer(unpack(args))
wait(1)
    end
end)

	end    
})






Tab:AddToggle({
	Name = "Auto Buy Deposit Speed 1x",
	Default = false,
	Callback = function(SPValue)
		_G.autospeed1x = SPValue

        task.spawn(function()
            while _G.autospeed1x do
local args = {
    [1] = "ComprarTick",
    [2] = 1
}
game:GetService("ReplicatedStorage").Remotes.Pasante:FireServer(unpack(args))
wait(0.07)
            end
        end)
	end    
})





Tab:AddToggle({
	Name = "Auto Buy Deposit Speed 10X",
	Default = false,
	Callback = function(SP2Value)
        _G.autospeed10x = SP2Value

        task.spawn(function()
            while _G.autospeed10x do
local args = {
    [1] = "ComprarTick",
    [2] = 10
}
game:GetService("ReplicatedStorage").Remotes.Pasante:FireServer(unpack(args))
wait(0.07)
            end
        end)
	end    
})





